-- Plugin Initialization
-- {
--   <plugin>: <value>,
-- }
--
-- To enable plugin, set <value> to 1 or true. Plugin provider is automatically selected.
-- Or set <value> to plugin name to enable plugin with specific plugin provider.
--
-- To disable plugin, set <value> to 0, v:false or empty string.
--
-- startuptime:
--   - 1                     " Use: https://github.com/dstein64/vim-startuptime
--
--  noice:
--   - 1                     " Use: https://github.com/folke/noice.nvim
--                           "      https://github.com/MunifTanjim/nui.nvim
--
-- statusline:
--   - default               " Use: https://github.com/nvim-lualine/lualine.nvim
--                           "      https://github.com/akinsho/bufferline.nvim
--
-- dashboard:
--   - 'alpha'               " Use: https://github.com/goolord/alpha-nvim
--   - 'mini.starter'        " Use: https://github.com/echasnovski/mini.starter
--   - 1                     " Use: https://github.com/nvimdev/dashboard-nvim
--
-- buffer-explorer:
--   - 1                     " Use: https://github.com/jlanzarotta/bufexplorer
--
-- explorer:
--   - 'oil'                 " Use: https://github.com/stevearc/oil.nvim
--   - 'mini.files'          " Use: https://github.com/echasnovski/mini.files
--   - 1                     " Use: https://github.com/nvim-neo-tree/neo-tree.nvim
--   - default               " Use: Netrw - Vim's builtin file explorer
--
-- finder:
--   - 'CtrlP'               " Use: https://github.com/ctrlpvim/ctrlp.nvim
--   - 'LeaderF'             " Use: https://github.com/Yggdroot/LeaderF
--   - 'telescope'           " Use: https://github.com/nvim-telescope/telescope.nvim
--   - 'fzf-lua'             " Use: https://github.com/ibhagwan/fzf-lua
--   - default               " Use: https://github.com/junegunn/fzf
--
-- editorconfig:
--   - 1                     " Use: https://neovim.io/doc/user/editorconfig.html
--
-- autoindent:
--   - 1                     " Use: https://github.com/NMAC427/guess-indent.nvim
--
-- quickfix:
--   - default               " Use: https://github.com/kevinhwang91/nvim-bqf
--
-- whitespace:
--   - 1                     " Use: https://github.com/ntpeters/vim-better-whitespace
--
-- comment:
--   - 1                     " Use: https://github.com/numToStr/Comment.nvim
--   - default               " Use: https://github.com/neovim/neovim/pull/28176
--                           " Or:  https://github.com/echasnovski/mini.comment
--
-- surround:
--   - 1                     " Use: https://github.com/kylechui/nvim-surround
--   - default               " Use: https://github.com/echasnovski/mini.surround
--
-- align:
--   - 1                     " Use: https://github.com/junegunn/vim-easy-align
--   - default               " Use: https://github.com/echasnovski/mini.align
--
-- change-case:
--   - 1                     " Use: https://github.com/johmsalas/text-case.nvim
--
-- splitjoin:
--   - default               " Use: https://github.com/AndrewRadev/splitjoin.vim
--
-- conflict-marker:
--  - default                " Use: https://github.com/akinsho/git-conflict.nvim
--
-- diffconflicts:
--   - default               " Use: https://github.com/whiteinge/diffconflicts
--
-- matchup:
--   - 1                     " Use: https://github.com/andymass/vim-matchup
--
-- foldtext:
--   - 1                     " Use: https://github.com/bbjornstad/pretty-fold.nvim
--
-- indent-guides:
--   - 'mini.indentscope'    " Use: https://github.com/echasnovski/mini.indentscope
--   - 1                     " Use: https://github.com/lukas-reineke/indent-blankline.nvim
--
-- zen:
--   - 1                     " Use: https://github.com/pocco81/true-zen.nvim
--   - default               " Use: https://github.com/folke/zen-mode.nvim
--
-- undotree:
--   - 1                     " Use: https://github.com/mbbill/undotree
--
-- grep:
--   - default               " Use: https://github.com/mhinz/vim-grepper
--
-- ctrlsf:
--   - 1                     " Use: https://github.com/dyng/ctrlsf.vim
--
-- any-jump:
--   - 1                     " Use: https://github.com/pechorin/any-jump.vim
--
-- sneak:
--   -  1                    " Use: https://github.com/folke/flash.nvim
--
-- ctags:
--   - 1                     " Use: https://github.com/ludovicchabant/vim-gutentags
--
-- tagbar:
--   - 1                     " Use: https://github.com/preservim/tagbar
--
-- treesitter:
--   - default               " Use: https://github.com/nvim-treesitter/nvim-treesitter
--                           "      https://github.com/nvim-treesitter/nvim-treesitter-textobjects
--                           "      https://github.com/Wansmer/treesj
--
-- auto-pairs:
--   - 'autopairs'           " Use: https://github.com/windwp/nvim-autopairs
--   - 'ultimate'            " Use: https://github.com/altermo/ultimate-autopair.nvim
--   - 1                     " Use: https://github.com/echasnovski/mini.pairs
--
-- lsp:
--   - 1                     " Use: https://github.com/neovim/nvim-lspconfig
--
-- completion:
--   - 'cmp'                 " Use: https://github.com/hrsh7th/nvim-cmp
--                           "      https://github.com/L3MON4D3/LuaSnip
--   - 'blink'               " Use: https://github.com/Saghen/blink.cmp
--   - 'coq'                 " Use: https://github.com/ms-jpq/coq_nvim
--   - 1                     " Use: https://github.com/lifepillar/vim-mucomplete
--                           "      https://github.com/hrsh7th/vim-vsnip
--
-- formatting:
--   - 'formatter'           " Use: https://github.com/mhartington/formatter.nvim
--   - 1                     " Use: https://github.com/stevearc/conform.nvim
--
-- linting:
--   - 1                     " Use: https://github.com/mfussenegger/nvim-lint
--
-- dap:
--   - 1                     " Use: https://github.com/mfussenegger/nvim-dap
--
-- github:
--   - 1                     " Use: https://github.com/tyru/open-browser-github.vim
--
-- git:
--   - 1                     " Use: https://github.com/tpope/vim-fugitive
--                           "      https://github.com/tpope/vim-rhubarb
--                           "      https://github.com/junegunn/gv.vim
--
-- git-messenger:
--   - 1                     " Use: https://github.com/rhysd/git-messenger.vim
--
-- git-gutter:
--   - 1                     " Use: https://github.com/lewis6991/gitsigns.nvim
--
-- which-key:
--   - 1                     " Use: https://github.com/liuchengxu/vim-which-key

