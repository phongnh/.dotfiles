-- Settings
vim.g.zero_vim_nerdfont = 0
    and (
        vim.fn.index(
            { "Kitty", "Alacritty", "iTerm.app", "VTE" },
            vim.env.TERM_PROGRAM == "tmux" and vim.env.LC_TERMINAL or vim.env.TERM_PROGRAM
        ) > -1
    )
vim.g.zero_vim_transparent_background = 0 and vim.fn.empty(vim.env.ZERO_VIM_TRANSPARENT_BACKGROUND) == 0
